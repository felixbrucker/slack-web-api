{
    "compilerOptions": {
        "lib": ["ES2021"],
        "module": "commonjs",
        "target": "ES2021",
        "outDir": "dist",
        "declaration": true,
        "sourceMap": false,
        "inlineSources": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "skipLibCheck": false,
        "noImplicitOverride": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
